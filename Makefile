#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

NAME = 

#==============================================================================#
#                           //  SOURCES  \\                                    #
#==============================================================================#

SRCS = srcs/

#==============================================================================#
#                             // OBJECTS \\                                    #
#==============================================================================#

OBJ = $(SRCS:.c=.o)

#==============================================================================#
#                             //  FLAGS  \\                                    #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME): $(OBJ)
	make -C libft
	gcc -o $(NAME) $(FLAGS) $(SRCS) -I./includes -lft -L./libft

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	make clean -C libft
	rm -f $(OBJ)

fclean: clean
	make fclean -C libft
	rm -f $(NAME)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
